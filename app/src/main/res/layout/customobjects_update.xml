<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/customobjects_update_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center" >
            
            <Button
                android:id="@+id/customobjects_update_remove_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:text="remove" />
        
            <Button
                android:id="@+id/customobjects_update_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:text="update" />
            
            <TextView
                android:id="@+id/customobjects_update_status_textView"
                android:text="Loading, please wait..."
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@+id/customobjects_update_update_button"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" >
            </TextView>

        </LinearLayout>
    
    </ScrollView>

</RelativeLayout>