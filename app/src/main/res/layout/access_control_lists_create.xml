<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<ScrollView
		android:id="@+id/access_control_lists_create_scrollView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" >

		<RelativeLayout 
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<EditText
				android:id="@+id/access_control_lists_create_name_field"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:layout_marginTop="20dp"
				android:ems="10"
				android:hint="Name" 
				android:inputType="text" >
		
				<requestFocus />
			</EditText>

			<Button
				android:id="@+id/access_control_lists_create_select_readers_button1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/access_control_lists_create_name_field"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="20dp"
				android:text="Select Readers" />
		
			<Button
				android:id="@+id/access_control_lists_create_select_writers_button2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/access_control_lists_create_select_readers_button1"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="20dp"
				android:text="Select Writers" />
		
			<Button
				android:id="@+id/access_control_lists_create_create_button3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/access_control_lists_create_select_writers_button2"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="20dp"
				android:text="Create" />

		
		</RelativeLayout>
	</ScrollView>

</RelativeLayout>


